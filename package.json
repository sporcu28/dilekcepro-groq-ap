{
  "name": "ai-sports-predictor",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:client": "cd client && npm install",
    "install:all": "npm install && npm run install:client",
    "dev:client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "setup": "npm run install:all && echo 'Setup complete! Run npm run dev:full to start development servers'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.2",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "tensorflow": "^4.10.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "sports",
    "prediction",
    "tensorflow",
    "react",
    "nodejs",
    "socket.io",
    "real-time",
    "football",
    "machine-learning"
  ],
  "author": "AI Sports Predictor Team",
  "license": "MIT",
  "description": "AI-powered real-time sports match prediction system with advanced machine learning algorithms"
}
